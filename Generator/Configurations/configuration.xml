<!--We will want to set up this file with an interface at one point.-->
<Configuration>
  <Ontology>
    <Namespace>http://www.sensor.nevada.edu/ontologies/research_site_hierarchy</Namespace>
    <LayerTerminology>organizational_tier</LayerTerminology>
  </Ontology>
  <ComposeElements>
    <BaseTemplate>
      <ElementName>ComposeTemplate.txt</ElementName>
    </BaseTemplate>
    <Services>
      <ElementName>WebServiceTemplate.txt</ElementName>
    </Services>
    <DB>
      <ElementName>PostGresComposeSubTemplate.txt</ElementName>
      <Dockerfile>DBDockerfile</Dockerfile>
      <!--ConnectionString @location must match name in Containerizer.BuildDatabase function and the database yaml output of that function-->
    </DB>
  </ComposeElements>
  <Dockerfile>
    <DBDockerfile>DBDockerfile.template</DBDockerfile>
    <ServiceDockerfile>ServiceDockerfile.template</ServiceDockerfile>
  </Dockerfile>
  <Python>
    <ColumnTemplate>ColumnDefinition.template</ColumnTemplate>
    <SAClassTemplate>SchemaClass.template</SAClassTemplate>
    <SAFileTemplate>SchemaFile.template</SAFileTemplate>
  </Python>
  <ConnectionString>postgresql://OnCoGen:OnCoGen@oncogen_db:5432/{0}</ConnectionString>
</Configuration>
